    "kelly_criterion": {
      "description": "Optimal sizing based on edge",
      "formula": "f = (W × R - L) / R where W=win%, R=avg win/loss, L=loss%",
      "example": {
        "win_rate": 60,
        "avg_win_loss_ratio": 1.5,
        "calculation": "(0.60 × 1.5 - 0.40) / 1.5 = 0.267 = 26.7% per trade"
      },
      "reality": "NEVER use full Kelly - too aggressive",
      "recommended": "Use 25-33% of Kelly result",
      "note": "Only for very experienced traders"
    },
    "anti_martingale": {
      "description": "Increase size after wins, decrease after losses",
      "rationale": "Ride winning streaks, protect during drawdowns",
      "implementation": "After 2 wins: +25% size, After 2 losses: -25% size",
      "pros": "Compounds wins, limits damage",
      "cons": "Can miss opportunities after losses"
    }
  },
